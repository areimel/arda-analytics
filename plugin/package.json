{
	"name": "@arda-analytics/plugin",
	"version": "0.1.0",
	"description": "ARDA Analytics - Lightweight vanilla JavaScript analytics plugin with modular orchestrator architecture for tracking user interactions and events",
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"browser": "dist/arda-analytics.min.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"dev": "webpack serve --mode development",
		"build": "npm run build:bundle && npm run build:types",
		"build:bundle": "webpack --mode production",
		"build:dev": "webpack --mode development",
		"build:types": "tsc --emitDeclarationOnly",
		"clean": "rimraf dist",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint src --ext .js,.ts",
		"lint:fix": "eslint src --ext .js,.ts --fix",
		"format": "prettier --write src/**/*.{js,ts}",
		"format:check": "prettier --check src/**/*.{js,ts}",
		"prepare": "husky install",
		"prepublishOnly": "npm run clean && npm run build && npm run test && npm run lint",
		"version": "npm run build && git add -A dist",
		"postversion": "git push && git push --tags",
		"prepack": "npm run build"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.esm.js",
			"require": "./dist/index.js",
			"browser": "./dist/arda-analytics.min.js",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json",
		"./dist/*": "./dist/*"
	},
	"devDependencies": {
		"@babel/core": "^7.23.0",
		"@babel/preset-env": "^7.23.0",
		"@types/jest": "^29.5.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"babel-jest": "^29.7.0",
		"babel-loader": "^9.1.0",
		"eslint": "^8.57.0",
		"husky": "^9.0.11",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"lint-staged": "^15.2.0",
		"prettier": "^3.2.5",
		"rimraf": "^5.0.5",
		"terser-webpack-plugin": "^5.3.9",
		"typescript": "^5.3.0",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^4.15.1"
	},
	"keywords": [
		"analytics",
		"plugin",
		"javascript",
		"tracking",
		"events",
		"orchestrator",
		"vanilla-js",
		"modular",
		"lightweight",
		"web-analytics",
		"user-tracking",
		"event-tracking",
		"browser",
		"frontend",
		"typescript-definitions"
	],
	"author": "ARDA Analytics Team",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/arda-analytics/arda-analytics.git",
		"directory": "plugin"
	},
	"bugs": {
		"url": "https://github.com/arda-analytics/arda-analytics/issues"
	},
	"homepage": "https://github.com/arda-analytics/arda-analytics#readme",
	"engines": {
		"node": ">=18.0.0"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"lint-staged": {
		"src/**/*.{js,ts}": [
			"eslint --fix --max-warnings 50",
			"prettier --write"
		],
		"*.{json,md}": [
			"prettier --write"
		]
	}
} 